<local:PinnableWindow
	x:Class="tfmStandalone.CasierWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:tfmStandalone"
	Name="Window"
	Icon="../Resources/Images/log_icon.ico"
	ShowActivated="False"
	Height="375"
	Width="690"
	Title="Casier"
	WindowStartupLocation="Manual"
	FontFamily="Verdana"
	FontSize="11"
	AllowsTransparency="False">
	<FrameworkElement.Style>
		<Style
			BasedOn="{StaticResource PinnableWindowStyle}"
			TargetType="{x:Type local:PinnableWindow}">
			<Style.Resources>
				<ResourceDictionary>
					<CornerRadius
						x:Key="WindowCornerRadius">0</CornerRadius>
					<Thickness
						x:Key="WindowHeaderMargin">0</Thickness>
				</ResourceDictionary>
			</Style.Resources>
		</Style>
	</FrameworkElement.Style>
	<Grid>
		<FlowDocumentScrollViewer
			Name="FlowDocumentScrollViewer" />
	</Grid>
</local:PinnableWindow>
